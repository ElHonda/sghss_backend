{
	"info": {
		"_postman_id": "sghss-api",
		"name": "SGHSS API",
		"description": "Coleção de endpoints para o Sistema de Gestão de Saúde e Serviços Sociais (SGHSS)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Autenticação",
			"item": [
				{
					"name": "Login Administrador Padrão",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@sghss.com\",\n    \"senha\": \"admin123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						},
						"description": "Login com o administrador padrão criado na inicialização do sistema"
					}
				},
				{
					"name": "Registro de Usuário (Apenas Admin)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"nome\": \"Nome do Usuário\",\n    \"email\": \"usuario@email.com\",\n    \"senha\": \"senha123\",\n    \"role\": \"ADMINISTRADOR\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						},
						"description": "Endpoint para registro de novos usuários (apenas administradores podem registrar)"
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"usuario@email.com\",\n    \"senha\": \"senha123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						},
						"description": "Endpoint para autenticação de usuários"
					}
				}
			]
		},
		{
			"name": "Público",
			"item": [
				{
					"name": "Ping",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/public/ping",
							"host": ["{{base_url}}"],
							"path": ["public", "ping"]
						},
						"description": "Endpoint para verificar se a API está online"
					}
				}
			]
		},
		{
			"name": "Administrador",
			"item": [
				{
					"name": "Teste Admin",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/admin/teste",
							"host": ["{{base_url}}"],
							"path": ["api", "admin", "teste"]
						},
						"description": "Endpoint de teste para administradores"
					}
				}
			]
		},
		{
			"name": "Profissional",
			"item": [
				{
					"name": "Teste Profissional",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/profissional/teste",
							"host": ["{{base_url}}"],
							"path": ["api", "profissional", "teste"]
						},
						"description": "Endpoint de teste para profissionais"
					}
				}
			]
		},
		{
			"name": "Paciente",
			"item": [
				{
					"name": "Teste Paciente",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/paciente/teste",
							"host": ["{{base_url}}"],
							"path": ["api", "paciente", "teste"]
						},
						"description": "Endpoint de teste para pacientes"
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "token",
			"value": "seu_token_jwt_aqui",
			"type": "string"
		}
	]
} 